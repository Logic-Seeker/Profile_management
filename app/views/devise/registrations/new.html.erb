<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name,:validate=>true, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<div><div><%= f.label :username %></div>
		<div><%= f.text_field :username ,:class=>"text" %></div></div>

	<div><div><%= f.label :email %></div>
		<div><%= f.email_field :email, :autofocus => true ,:class=>"text",:validate=>true%></div></div>

			<div><div><%= f.label :password %></div>
				<div><%= f.password_field :password,:class=>"text" %></div></div>

					<div><div><%= f.label :password_confirmation %></div>
						<div> <%= f.password_field :password_confirmation ,:class=>"text"%></div></div>

					<div><div class="submit"><%= f.submit "Sign up" %></div></div>
				<% end %>
				</br>

<%= render "devise/shared/links" %>
