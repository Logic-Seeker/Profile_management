<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name),:validate=>true, :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

	<div class="namefield"><%= f.label :password, "New password",:class=>'labelname' %>
		<%= f.password_field :password, :autofocus => true ,:validate=>true%></div>

<div class="namefield"><%= f.label :password_confirmation, "Confirm new password",:class=>'labelname' %>
  <%= f.password_field :password_confirmation %></div>

  <div class="submit"><%= f.submit "Change my password" %></div>
<% end %>

<%= render "devise/shared/links" %>
