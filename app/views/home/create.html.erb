<p class="error"><%= flash[:error][0] unless flash[:error].nil?%></p>
<header id="editprofile">Create Profile</header>
</br>
<%= form_for @user_info ,:validate=>true, :url =>{:action =>"new"} do |f| %>
	<div class="namefield">
		<%= f.label "Name:",:class=>'labelname' %>		
		<%= f.text_field :name %></br>
	</div>
	<div class="namefield">
		<%= f.label "Age:" ,:class=>'labelname' %>		
		<%= f.text_field :age %></br>
	</div>
	<div class="namefield">
		<%= f.label "Occupation:" ,:class=>'labelname' %>	
		<%= f.text_field :occupation %></br>
	</div>
	<div class="namefield">
		<%= f.label "Education:" ,:class=>'labelname' %>		
		<%= f.text_field :education %></br>
	</div>
	<div class="namefield">
		<%= f.label "Phone No:" ,:class=>'labelname' %>		
		<%= f.text_field :phone %></br>
	</div>
	<div class="namefield">
		<%= f.label "Address:",:class=>'labelname'  %>		
		<%= f.text_field :address %></br>
	</div>
	<div class="namefield">
		<%= f.label "Picture:" ,:class=>'labelname' %>
		<%= f.file_field :pictuer ,:class=>"createpicture"%></br>
	</div>
	<div class="submitbutton">
		<%= f.submit "Create"%>
	</div>
<% end %>

