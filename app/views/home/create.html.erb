<p class="error"><%= flash[:error][0] unless flash[:error].nil?%></p>
<header id="editprofile">Create Profile</header>
</br>
<%= form_for @user_info ,:validate=>true, :url =>{:action =>"new"} do |f| %>
	<div class="namefield">
		<%= f.label :name,"Name<span class='big'>*</span>".html_safe,:class=>'labelname' %>		
		<%= f.text_field :name %></br>
	</div>
	<div class="namefield">
		<%= f.label "Age" ,:class=>'labelname' %>		
		<%= f.text_field :age %></br>
	</div>
	<div class="namefield">
		<%= f.label :occupation,"Occupation<span class='big'>*</span>".html_safe ,:class=>'labelname' %>	
		<%= f.text_field :occupation %></br>
	</div>
	<div class="namefield">
		<%= f.label :education,"Education<span class='big'>*</span>".html_safe ,:class=>'labelname' %>		
			<%= f.select :education ,["", "BBA","BBS","Computer Engineering" ] %></br>
	</div>
	<div class="namefield">
		<%= f.label :phone,"Phone No<span class='big'>*</span>".html_safe ,:class=>'labelname' %>		
		<%= f.text_field :phone %></br>
	</div>
	<div class="namefield">
		<%= f.label :address,"Address<span class='big'>*</span>".html_safe,:class=>'labelname'  %>		
		<%= f.text_field :address %></br>
	</div>
	<div class="namefield">
		<%= f.label :pictuer,"Picture<span class='big'>*</span>".html_safe ,:class=>'labelname' %>
		<%= f.file_field :pictuer ,:class=>"createpicture"%></br>
	</div>
	<div class="submitbutton">
		<%= f.submit "Create"%>
	</div>
<% end %>

