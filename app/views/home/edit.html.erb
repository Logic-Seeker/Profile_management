	</div>	
	<div class="namefield">

		<%= f.label "Age:" %>		
		<%= f.text_field :age ,:value => "#{@user_info.age}" %></br>	<div class="namefield">
		</div>
		<div class="namefield">

			<%= f.label "Occupation:" %>		
			<%= f.text_field :occupation ,:value => "#{@user_info.occupation}" %></br>
		</div>
		<div class="namefield">
			<%= f.label "Education:" %>		
			<%= f.text_field :education ,:value => "#{@user_info.education}" %></br>
		</div>
		<div class="namefield">
			<%= f.label "Phone No:" %>		
			<%= f.text_field :phone ,:value => "#{@user_info.phone}" %></br>
		</div>
		<div class="namefield">
			<%= f.label "Address:" %>	
			<%= f.text_field :address,:value =>"#{@user_info.address}" %>
