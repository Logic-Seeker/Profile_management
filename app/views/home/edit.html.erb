<p class="error"><%= flash[:error][0] unless flash[:error].nil?%></p>
<header id="editprofile">Edit Profile</header>
</br>
<%= form_for @user_info ,:validate=>true, :url =>{:action =>"update"} do |f| %>
	<div class="namefield">
		<%= f.label "Name:",:class=>'labelname' %>		
		<%= f.text_field :name,:value => "#{@user_info.name}" %></br>
	</div>	
	<div class="namefield">

		<%= f.label "Age:",:class=>'labelname' %>		
		<%= f.text_field :age ,:value => "#{@user_info.age}" %>	
		</div>
		<div class="namefield">

			<%= f.label "Occupation:" ,:class=>'labelname' %>		
			<%= f.text_field :occupation ,:value => "#{@user_info.occupation}" %></br>
		</div>
		<div class="namefield">
			<%= f.label "Education:" ,:class=>'labelname' %>		
			<%= f.text_field :education ,:value => "#{@user_info.education}" %></br>
		</div>
		<div class="namefield">
			<%= f.label "Phone No:" ,:class=>'labelname' %>		
			<%= f.text_field :phone ,:value => "#{@user_info.phone}" %></br>
		</div>
		<div class="namefield">
			<%= f.label "Address:" ,:class=>'labelname' %>	
			<%= f.text_field :address,:value =>"#{@user_info.address}" %>
		</div>
		<div class="namefield">
			<%= f.label "Picture:" ,:class=>'labelname' %>
			<%= f.file_field :pictuer,:value => "#{@user_info.pictuer}",:validate => { :presence => false } %> <%= image_tag @user_info.pictuer,:class=>"photo" ,:size => "35x35" %> </br></br>
		</div>
		<div class="submitbutton">
			<%= f.submit "Update"%>
		</div>
<% end %>

