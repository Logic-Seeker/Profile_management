<p class="error"><%= flash[:error][0] unless flash[:error].nil?%></p>
<header id="editprofile">Edit Profile</header>
</br>
<%= form_for @user_info ,:validate=>true, :url =>{:action =>"update"} do |f| %>
	<div class="namefield">
		<%= f.label :name,"Name<span class='big'>*</span>".html_safe,:class=>'labelname' %>		
		<%= f.text_field :name,:value => "#{@user_info.name}" %></br>
	</div>	
	<div class="namefield">

		<%= f.label "Age:",:class=>'labelname' %>		
		<%= f.text_field :age ,:value => "#{@user_info.age}" %>	
		</div>
		<div class="namefield">

			<%= f.label :occupation,"Occupation<span class='big'>*</span>".html_safe ,:class=>'labelname' %>		
			<%= f.text_field :occupation ,:value => "#{@user_info.occupation}" %></br>
		</div>
		<div class="namefield">
			<%= f.label :education,"Education<span class='big'>*</span>".html_safe ,:class=>'labelname' %>		
			<%= f.select :education ,["", "BBA","BBS","Computer Engineering" ] %></br>
		</div>
		<div class="namefield">
			<%= f.label :phone,"Phone Number<span class='big'>*</span>".html_safe ,:class=>'labelname' %>		
			<%= f.text_field :phone ,:value => "#{@user_info.phone}" %></br>
		</div>
		<div class="namefield">
			<%= f.label :address,"Address<span class='big'>*</span>".html_safe,:class=>'labelname' %>	
			<%= f.text_field :address,:value =>"#{@user_info.address}" %>
		</div>
		<div class="namefield">
			<%= f.label :pictuer,"Picture".html_safe ,:class=>'labelname' %>
			<%= f.file_field :pictuer,:value => "#{@user_info.pictuer}",:validate => { :presence => false } %> <%= image_tag @user_info.pictuer,:class=>"photo" ,:size => "35x35" %> </br></br>
		</div>
		<div class="submitbutton">
			<%= f.submit "Update"%>
		</div>
<% end %>

